$green = #00b7a3;
*
  padding 0
  margin 0
  outline none
button
  border none
input
  border 1px solid #eee
html, body, #app
  width 100%
  height 100%
.nickname
  line-height 30px
  width 100%
  border 1px solid $green
.dis-flex
  display flex
  height 100%
.web-im
  width 100%
  height 100%
  .user-list
    width 200px
    height 100%
    box-shadow 1px 1px 1px #eee
    .user
      line-height 40px
      padding 0 4px
      border-bottom 1px solid #ccc
      .tips-num
        height 18px
        font-size 12px
        color #ffffff
        background $green
        min-width 20px
        border-radius 50px
        display: inline-block;
        line-height: 18px;
        text-align center
  .msg-content
    position relative
    width 100%
    .header
      position sticky
      box-shadow 1px -1px 2px 2px #eee
      line-height 40px
      padding-left 20px
      font-size 24px
      top 0
      z-index 10
      background #fff
  .im-record
    .join-tips
      position relative!important
      display block
      color #cccccc
      font-size 15px
      text-align center
      width 100%
      left 0!important
      transform none!important
    .li
      margin-bottom 10px
      position relative
      &:after
        content ''
        display block
        clear both
      .img
        float left
        width 50px
        height 50px
        border-radius 100%
        background #ccc
        padding 4px
        line-height 50px
        text-overflow ellipsis
        overflow hidden
        text-align center
      .message-box
        position absolute
        top 50%
        transform translateY(-50%)
        left 60px
      &.user
        .message-box
          background #46b0ff
          float right
          right 60px
          left inherit
        .img
          float right
    .message-box
      background $green
      color #ffffff
      line-height 30px
      border-radius 6px
      font-size 18px
      display inline-block
      padding 0 20px
  .footer
    position absolute
    display flex
    bottom 0
    width 100%
    box-shadow 1px 1px 8px #eee
    height 60px
    input
      flex 1
      padding 0 20px
      font-size 24px
    button
      width 200px
      background $green
      color #fff
      font-size 24px